                                <div class="col-md-4 agileinfo_single_left">
                                    <img id="example" src="/images/images/<%=ds_dien_thoai.Ma_so%>.png" alt=" " class="img-responsive">
                                </div>
                                <div class="col-md-8 agileinfo_single_right">
                                    <h2>
                                        <%= ds_dien_thoai.Ten%>
                                    </h2>

                                    <div class="w3agile_description">
                                        <h4>Mô tả :</h4>
